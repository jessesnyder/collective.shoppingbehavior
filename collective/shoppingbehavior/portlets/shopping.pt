<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      tal:omit-tag="">
    <dl class="portlet" id="portlet-cart-add">

    <dt class="portletHeader">
        <span class="portletTopLeft"></span>
        <span class="portletTopMiddle"
          i18n:translate="text_product_details">Product Details</span>
        <span class="portletTopRight"></span>
    </dt>

    <dd class="portletItem odd">
      <div>

        <p class="productTitle"
           tal:define="field view/title"
           tal:condition="field"
           tal:content="field">[Title]
        </p>

        <p class="productDescription"
           tal:define="field view/description"
           tal:condition="field"
           tal:content="field" >[Description]
        </p>

        <p class="productPrice"
           tal:define="price python: '%.2f' % view.price"
           tal:condition="price"
       i18n:translate="text_price">
             Price: <span i18n:name="value_currency"
                          tal:content="view/currency" />
             <span tal:content="price" i18n:name="value_price" />
        </p>

      </div>
    </dd>

    <dd class="portletFooter">
        <form tal:condition="not: view/context_is_in_cart"
              tal:attributes= "action string:${context/absolute_url}/@@xsb-cart-add"
              method="post">
          <input type="hidden" name="add_item" value="True" />
          <input type="text" size="1" name="quantity" value="1" />
          <input type="submit"
                 i18n:attributes="value label_add_to_cart"
                 value="Add to Cart" />
        </form>
        <p tal:condition="view/context_is_in_cart">
          This item is already in your shopping cart.
        </p>
        <span class="portletBottomLeft"></span>
        <span class="portletBottomRight"></span>
    </dd>

</dl>
</html>