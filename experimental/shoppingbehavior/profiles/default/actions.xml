<?xml version="1.0"?>
<object name="portal_actions" meta_type="Plone Actions Tool">
 <action-provider name="portal_actions">

  <action title="Enable Pricing" action_id="enablePricing" category="object_buttons"
     condition_expr="object/@@pricing/isPriceEnableable"
     url_expr="string:${object_url}/@@pricing/enablePricing" visible="True">
   <permission>Modify portal content</permission>
  </action>

  <action title="Disable Pricing" action_id="disablePricing" category="object_buttons"
     condition_expr="object/@@pricing/isPriceEnabled"
     url_expr="string:${object_url}/@@pricing/disablePricing" visible="True">
   <permission>Modify portal content</permission>
  </action>

</action-provider>
</object>